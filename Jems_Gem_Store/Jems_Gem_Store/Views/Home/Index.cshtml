@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Jem's Truely OutRagious Store</h1>
    <p class="lead">{{"It's truly," + "truly outragiously" + " low PRICES!"}}</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row" ng-controller="StoreController as store">
    <div class="col-lg-12" ng-repeat="good in store.goods">
        <h1>{{good.name}}</h1>
        <h2>{{good.price}}</h2>
        <p> {{good.description}}</p>
        <button ng-hide="good.soldOut">Add to cart</button>
    </div>
</div>

